    <% for @t in @twittters %>
        <div class="panel panel-default post-panel">
            <div class="panel-body row">
                <div class= "col-sm-1">
                    <img src="/avatar.png" height="40px" widht="40px">
                </div>
                <div class= "col-sm-11">
                    <p class="post-content"><%= @t.content %></p>
                </div>
                <div class= "col-sm-11">
                <div class="post-links">                    
                    <%= link_to edit_twittter_path(@t.id) do %>
                        <span class="glyphicon glyphicon-pencil g-links" aria-hidden="true"></span>                
                    <% end %>
                    <%= link_to twittter_path(@t.id), method: :delete ,data: { confirm: '本当に削除してよろしいですか？' } do %>
                        <span class="glyphicon glyphicon-trash g-links" aria-hidden="true"></span> 
                    <% end %>                    
                </div>
                </div>
            </div>
        </div>    
    <% end %>
