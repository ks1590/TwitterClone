<h1>ツイート一覧</h1>
<p><%= notice %></p>
<table>
  <% @twittters.each do |t| %>
  <tr>
    <td><%= t.content %></td>
    <td><%= link_to "編集する", edit_twittter_path(t.id), :class => 'btn btn-default' %></td>
    <td><%= link_to '削除する', twittter_path(t.id), method: :delete ,data: { confirm: '本当に削除してよろしいですか？' }, :class => 'btn btn-danger'%></td>
  </tr>
<% end %>
</table>
